<% include ./partials/_header %>
<html>
<title>New URL - TinyApp Example</title>
  <body style="font-size:20px; padding:50px;">
    <h3>Register for TinyApp</h3>
    <form action="/register" method="POST">
      <div class="form-group mb-2">
        <!-- Create New URL -->
        <label for="username">User Name:</label>
        <input class="form-control" type="text" name="username" placeholder="User Name:" style="width: 300px; margin: 1em"/>
        <label for="password">Password:</label>
        <input class="form-control" type="password" name="password" placeholder="Password:" style="width: 300px; margin: 1em"/>
        <button type="submit" class="btn btn-primary">Login</button>

      </div>
    </form>
  </body>
</html>